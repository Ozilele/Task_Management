{
  "compilerOptions": {
    "target": "ES2020", // kod TypeScript zostanie skompilowany do ECMAScript 2k20
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // pozwala na import plików .ts z rozszerzeniami
    "resolveJsonModule": true,
    "isolatedModules": true, // przetwarzanie kazdego pliku TS oddzielnie
    "noEmit": true, // zapobiega generowaniu jakiegokolwiek kodu wynikowego
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // najbardziej restrykcyjne reguły
    "noUnusedLocals": true, // zgłasza błędy kiedy lokalne zmienne są zadeklarowane, ale nie uzywane
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"], // które pliki maja byc uwzglednione w kompilacji
  "references": [{ "path": "./tsconfig.node.json" }] 
}
